<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 style="color: #c65b5b"><%= @artist.name %></h1>
            <p>Band:<%= @artist.band %></p>
            <br>
            <p>
              <%= link_to "Back to artists page", artists_path, class: "btn btn-primary btn-s" %>
              <%= link_to "Delete Artist", artist_path(@artist.id), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
            </p>
            <br>
            <% @artist.photos.each do |photo| %>
              <%= image_tag photo.image, class: "img-thumbnail img-responsive", size: "300x300"%>
            <% end %>
        </div>
        <div class="col-md-6">
            <h2 style="color: #c65b5b">Songs</h2>
            <div class="songs"><br>
                <% @artist.songs.each do |song| %>
                  <li><%= song.name %>
                    <%= link_to "Delete", artist_song_path(@artist.id, song.id), class: "btn-sm btn-danger pull-right", method: :delete, data: { confirm: "Are you sure?" } %></li>
                  <hr>
                <% end %>
              </div>
              <%= render "songs/form" %>
        </div>
    </div>
    <br>
</div>
