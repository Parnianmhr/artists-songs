
<br>
<h1>Artists</h1>
<br>
<div class="sort">
    <h4>Sorting by:</h4>
    <%= sortable "name" %>
</div>
<br>
<% @artists.each do |artist| %>
<div class="artistcolor">
  <p><%= link_to artist.name, artist_path(artist.id)%>
    | Added:
    <%= artist.created_at%>
    | <%= link_to "Delete Artist", artist_path(artist), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
<br>
</div>
<% end %>
